@model WatchParty.Models.Post

@{
    ViewData["Title"] = "Edit Post";
}

<div class="row bg-light-subtle">
    <div class="row text-center">
        <h1>Edit Post</h1>
        <hr />
    </div>
    <div class="row justify-content-center">
        <div class="col-md-4">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group mt-2">
                    <textarea asp-for="PostTitle" class="form-control" rows="2" cols="30" placeholder="Enter your title here" id="post-title"></textarea>
                    <span asp-validation-for="PostTitle" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <textarea asp-for="PostDescription" class="form-control" rows="20" cols="30" placeholder="Enter your description here" id="post-description"></textarea>
                    <span asp-validation-for="PostDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary create-post-submit-btn" id="post-submit" />
                </div>
            </form>
        </div>
    </div>
</div>